{
  "name": "gengarden",
  "version": "1.0.0",
  "description": "Procedurally generated gardens",
  "repository": "git@github.com:dpisani/gengarden.git",
  "author": "dpisani <dean.a.pisani@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "mocha",
    "storybook": "npm run storybook --workspace=@gengarden/generators",
    "build-storybook": "npm run build-storybook --workspace=@gengarden/generators",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "lint": "eslint \"packages/*/src/**/*.ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/html": "^6.1.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^1.15.3",
    "typescript": "^5.5.4"
  }
}
