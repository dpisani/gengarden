{
  "name": "gengarden",
  "version": "1.0.0",
  "description": "Procedurally generated gardens",
  "repository": "git@github.com:dpisani/gengarden.git",
  "author": "dpisani <dean.a.pisani@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "clean": "rm -rf **/target/*",
    "build": "tsc --build",
    "build:test": "tsc --build tsconfig-test.json",
    "test": "mocha",
    "generate-examples": "yarn workspace @gengarden/examples generate",
    "viewer": "yarn workspace @gengarden/examples viewer"
  },
  "cyclist": {
    "lifecycles": {
      "generate": {
        "stages": [
          "build",
          "generate-examples"
        ]
      },
      "test": {
        "stages": [
          "build:test",
          "test"
        ]
      }
    }
  },
  "devDependencies": {
    "source-map-support": "^0.5.19"
  }
}
