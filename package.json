{
  "name": "gengarden",
  "version": "1.0.0",
  "description": "Procedurally generated gardens",
  "repository": "git@github.com:dpisani/gengarden.git",
  "author": "dpisani <dean.a.pisani@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "clean": "rm -rf **/target/*",
    "build": "tsc --build",
    "build:dev": "tsc --build tsconfig-dev.json",
    "build:watch": "yarn build:dev --watch",
    "test": "mocha",
    "generate-examples": "yarn workspace @gengarden/examples generate",
    "generate-examples:watch": "yarn workspace @gengarden/examples generate:watch",
    "viewer": "yarn workspace @gengarden/examples viewer"
  },
  "cyclist": {
    "lifecycles": {
      "generate": [
        "build",
        "generate-examples"
      ],
      "test": [
        "build:dev",
        "test"
      ],
      "start": [
        "build:dev",
        {
          "name": "watch",
          "tasks": [
            "build:watch",
            "generate-examples:watch",
            "viewer"
          ],
          "parallel": true,
          "outputMode": "stream"
        }
      ]
    }
  },
  "dependencies": {
    "@cyclist/runner": "^0.6.0"
  }
}
